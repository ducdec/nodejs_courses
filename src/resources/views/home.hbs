<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-ms-6 col-lg-4 mt-4 c-item">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top img-fluid" src="{{this.image}}" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Xem ngay</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
